{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es7", "DOM"],
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2017",
        "removeComments": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "declaration": true,
        "noUnusedLocals": true,
        "outDir": "./lib",
        "baseUrl": "src",
        "strict": true,
        "sourceMap": true,
        "allowJs": true,
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "src/**/*.test.ts",
        "**/__mocks__/*",
        "**/__mockData__/"
    ]
}
